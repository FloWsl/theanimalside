# Development Environment Configuration for The Animal Side

# Copy this file to .env.local and fill in your values
# This file serves as a template - never commit .env.local!

# Development Settings
VITE_APP_TITLE="The Animal Side - Development"
VITE_ENVIRONMENT=development

# API Configuration (when you add backend)
# VITE_API_BASE_URL=http://localhost:3001/api
# VITE_API_TIMEOUT=10000

# Map Integration (add your API keys when ready)
# VITE_MAPBOX_TOKEN=your_mapbox_token_here
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# CMS Integration (for when you add Sanity/Contentful)
# VITE_SANITY_PROJECT_ID=your_sanity_project_id
# VITE_SANITY_DATASET=production

# Analytics (for production)
# VITE_GA_TRACKING_ID=your_google_analytics_id
# VITE_PLAUSIBLE_DOMAIN=theanimalside.com

# Feature Flags for Development
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SERVICE_WORKER=false

# Email/Newsletter Integration (for later)
# VITE_MAILCHIMP_API_KEY=your_mailchimp_key
# VITE_CONVERTKIT_API_KEY=your_convertkit_key
